# Shortcuts
alias db="cd ~/Dropbox"
alias gd="cd ~/Google\ Drive"
alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"
alias hs='history | grep'
#alias repos="cd code/repos"
